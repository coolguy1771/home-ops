(common) {
  errors
  log
  reload
  loadbalance
  cache
  loop
  local
  prometheus 192.168.1.1:9153
}

(localhostz) {
  # dnsmasq is only enabled for setting hostnames in Opnsense
  hosts /var/etc/dnsmasq-hosts {
    ttl 1
    reload 5s
    fallthrough
  }
}

(k8s_gatewayz) {
  forward . 10.0.42.9:53
}

. {
  import common
  import localhostz
  forward . tls://45.90.28.216 tls://45.90.30.216 {
    tls_servername 6639ff.dns.nextdns.io
  }
  health {
    lameduck 5s
  }
}

{{ SECRET_PUBLIC_DOMAIN }} {
  import common
  import localhostz
  import k8s_gatewayz
}

{{ SECRET_PRIVATE_DOMAIN }} {
  import common
  import localhostz
  import k8s_gatewayz
}
