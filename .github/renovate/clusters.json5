{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "Separate PRs for kyak cluster",
      "matchFileNames": [
        "**/kubernetes/kyak/**",
        "**/ansible/kyak/**",
        "**/pulumi/kyak/**"
      ],
      "additionalBranchPrefix": "kyak-"
    },
    {
      "description": "Separate PRs for sol cluster",
      "matchFileNames": [
        "**/kubernetes/sol/**",
        "**/ansible/sol/**",
        "**/pulumi/sol/**"
      ],
      "additionalBranchPrefix": "sol-"
    }
  ]
}
